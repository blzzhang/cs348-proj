<!DOCTYPE html>
<html>
<head>
  <title><%=  %></title>
  <link rel='stylesheet' href='/stylesheets/style.css' />
</head>
<body>
  <div class="hero-page">
    <img class="hero" src="img/user_hero.png">
    <div class="body-content">
      <div class="sign-card">
        <div class = "logged_in", style="display: none; color: white">
          <h1>You are already logged in <%= name%>!</h1>
        </div>
        <div class="sign-inner-content">
          <h2>Login</h2>
          <form action = "/users" method="post" style="width: 240px;">
            <label for="username">Username</label>
            <br>
            <input type="text" id="username" name="username" style="width: 100%;" placeholder="Mr.Goose"><br><br>
            <label for="pwd">Password</label>
            <br>
            <input type="password" id="pwd" name="pwd" style="width: 100%;" placeholder="Gooseypassword"><br><br>
            <input type="submit" value="Submit"> <br>
            <br>
            <br>
            <a href="/register">Not registered? Sign up here</a>
          </form>
        </div>
      </div>
    </div>
  </div>

  <script>
    var name = '<%- name %>';
    if (name) {
      document.getElementsByClassName('sign-inner-content')[0].style.display='none';
      document.getElementsByClassName('logged_in')[0].style.display='block';
    }
  </script>
</body>
</html>
